{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2021",
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "types": [
      "node",
      "mocha"
    ],
  },
  "exclude": [
    "./test/",
    "./node_modules/",
    "./dist/"
  ],
}
