include ../messagesAvatar/messagesAvatar.pug

block script
    link(rel="stylesheet" href="messagesList.scss")   

mixin messagesList(user)
    .messages-list
        .messages-list__header
            d.messages-list__avatar-name-container
                +messagesAvatar(user.avatarURL)
                h3=user.display_name
            button.add-delete-user add-delete
        .messages-list__time-container
            h4=user.time   