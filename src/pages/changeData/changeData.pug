extends ../../layouts/main/main.pug
include ../../components/generalInput/generalInput.pug
include ../../components/generalButton/generalButton.pug
include ../../components/generalLink/generalLink.pug
include ../../components/goBackAside/goBackAside.pug
include ../../components/uploadAvatarModal/uploadAvatarModal.pug
block script
    link(rel="stylesheet" href="changeData.scss")
    script(src="changeData.js" type="module")
    -
        const user = {
            email: "Bart@yandex.ru",
            login: "Bart",
            first_name: "Bart",
            second_name: "Simpson",
            display_name: "BartSimpson",
            phone: "+7 (000) 000 00 00",
            avatarURL:"https://avatars.mds.yandex.net/i?id=90a14aacfb5159c04fc902bad5bbd095-5232129-images-thumbs&n=13&exp=1"
        }

block main
    +uploadAvatarModal()
    div
        +goBackAside()
        .card
            .container
                h1 Change profile data
                .avatar-wrapper(id="open")
                    img(class="avatar" src=user.avatarURL alt="avatar")
                h3=user.display_name
                +generalInput("Email", "email", "email", _, _, user.email)
                +generalInput("Login", "text", "login", _, _, user.login)
                +generalInput("Name", "text", "first_name", _, _, user.first_name)
                +generalInput("Surname", "text", "second_name", _, _, user.second_name)
                +generalInput("Nickname", "text", "display_name", _, _, user.display_name)
                +generalInput("Phone number", "tel", "phone", _, _, user.phone)

                +generalButton("Save")




